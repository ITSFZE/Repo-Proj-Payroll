<mvc:View controllerName="com.app.payroll.controller.JobMaster" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:c="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Page enableScrolling="true" title="Job Master" titleAlignment="Center">
		<content>
			<VBox fitContainer="true">
				<Table items="{JobMaster>/JobMaster}" popinLayout="GridLarge" alternateRowColors="true">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Title text="Job Master List" titleStyle="Auto"/>
								<ToolbarSpacer/>
								<SearchField width="25%" class="sapUiSmallMarginEnd"/>
								<Button text="Create Job" type="Ghost" class="sapUiMediumMarginEnd" press="onPressCreateJob"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column width="11em" hAlign="Begin">
							<Text text="Job Name"/>
						</Column>
						<Column width="11em" hAlign="Center">
							<Text text="No. of Positions"/>
						</Column>
						<Column width="11em" hAlign="Center">
							<Text text="Created Date"/>
						</Column>
						<Column width="11em" hAlign="Center">
							<Text text="Modified Date"/>
						</Column>
						<Column width="1.4em" hAlign="End"></Column>
						<Column width="1.4em" hAlign="Center"></Column>
						<Column width="3em" hAlign="Begin"></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{JobMaster>name}"/>
								<Text text="{JobMaster>position}"/>
								<Text text="{JobMaster>cDate}"/>
								<Text text="{JobMaster>mDate}"/>
								<Button icon="sap-icon://edit" press="onPressEditJobMaster"/>
								<Button icon="sap-icon://employee"/>
								<Button icon="sap-icon://add-employee"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</content>
	</Page>
</mvc:View>