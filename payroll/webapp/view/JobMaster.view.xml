<mvc:View controllerName="com.app.payroll.controller.JobMaster" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:c="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Page enableScrolling="true" title="Job Master" showNavButton="true" navButtonPress="onPressNavBack">
		<content>
			<VBox fitContainer="true">
				<Table items="" popinLayout="GridLarge" alternateRowColors="true">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Title text="Job Master List" titleStyle="Auto"/>
								<ToolbarSpacer/>
								<SearchField width="25%" class="sapUiSmallMarginEnd"/>
								<Button text="Create Job" type="Ghost" class="sapUiMediumMarginEnd" press="onPressCreateJob" tooltip="Add Job"></Button>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column width="11em" hAlign="Begin">
							<Text text="Job Name"/>
						</Column>
						<Column width="11em" hAlign="Center">
							<Text text="No. of Positions"/>
						</Column>
						<Column width="11em" hAlign="Center">
							<Text text="Created Date"/>
						</Column>
						<Column width="11em" hAlign="Center">
							<Text text="Modified Date"/>
						</Column>
						<Column width="1.4em" hAlign="End"></Column>
						<Column width="1.4em" hAlign="Center"></Column>
						<Column width="3em" hAlign="Begin"></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="Software"/>
								<Text text="5"/>
								<Text text="12/07/2018"/>
								<Text text="12/07/2019"/>
								<Button icon="sap-icon://edit" press="onPressEditJobMaster" tooltip="Edit Job"/>
								<Button icon="sap-icon://employee" tooltip="Manage Position"/>
								<Button icon="sap-icon://add-employee" tooltip="Add Position"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</content>
	</Page>
</mvc:View>