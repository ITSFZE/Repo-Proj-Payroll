<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:semantic="sap.m.semantic"
	xmlns:c="sap.suite.ui.microchart" xmlns:l="sap.ui.layout" displayBlock="true" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="com.app.payroll.controller.Dashboard">
	<Page showHeader="false">
		<content>
			<tnt:ToolPage id="toolPage" sideExpanded="false">
				<tnt:header>
					<tnt:ToolHeader>
						<Button icon="sap-icon://menu2" tooltip="Menu" type="Transparent" press="handleMenuPress">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<ToolbarSpacer/>
						<Text text="Dashboard"/>
						<ToolbarSpacer/>
						<Button id="userPopOver" tooltip="User Profile" icon="sap-icon://customer" type="Transparent" press="onPressUserProflie">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<Button id="logoutBtn" tooltip="Logout" icon="sap-icon://log" type="Transparent" press="handleLogoutPress">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</tnt:ToolHeader>
				</tnt:header>
				<tnt:sideContent>
					<tnt:SideNavigation expanded="false" itemSelect="onItemSelect">
						<tnt:NavigationList items="{path: '/sideNavigation', templateShareable:false}">
							<tnt:NavigationListItem text="{path:'title', templateShareable:false}" icon="{path:'icon', templateShareable:false}"
								expanded="{path:'expanded', templateShareable:false}" items="{path:'items', templateShareable:false}"
								key="{path:'key', templateShareable:false}">
								<tnt:NavigationListItem text="{path:'title', templateShareable:false}" key="{path:'key', templateShareable:false}"></tnt:NavigationListItem>
							</tnt:NavigationListItem>
						</tnt:NavigationList>
					</tnt:SideNavigation>
				</tnt:sideContent>
				<tnt:mainContents>
					<NavContainer id="pageContainer">
						<Page showHeader="false" id="dashBoard">
							<content>
								<l:BlockLayout id="dashBLayout">
									<l:BlockLayoutRow>
										<l:BlockLayoutCell>
											<GenericTile id="genericTileJobMaster" class="sapUiTinyMarginBegin sapUiTinyMarginTop" sizeBehavior="Small" header="Job Master" app:route=""
												press="onTilePress">
												<tileContent>
													<TileContent>
														<content>
															<ImageContent src=""/>
														</content>
													</TileContent>
												</tileContent>
											</GenericTile>
											<GenericTile id="genericTileWageMaster" class="sapUiTinyMarginBegin sapUiTinyMarginTop" sizeBehavior="Small" header="Wage Master"
												app:route="" press="onTilePress">
												<tileContent>
													<TileContent>
														<content>
															<ImageContent src=""/>
														</content>
													</TileContent>
												</tileContent>
											</GenericTile>
											<GenericTile id="genericTileEmpGroups" class="sapUiTinyMarginBegin sapUiTinyMarginTop" sizeBehavior="Small" header="Employee Groups"
												app:route="" press="onTilePress">
												<tileContent>
													<TileContent>
														<content>
															<ImageContent src=""/>
														</content>
													</TileContent>
												</tileContent>
											</GenericTile>
										</l:BlockLayoutCell>
									</l:BlockLayoutRow>
								</l:BlockLayout>
							</content>
						</Page>
					</NavContainer>
				</tnt:mainContents>
			</tnt:ToolPage>
		</content>
	</Page>
</mvc:View>