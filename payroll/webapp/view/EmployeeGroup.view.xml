<!--EmployeeGroup view is used to show the details of GroupType-->
<mvc:View controllerName="com.app.payroll.controller.EmployeeGroup" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
	xmlns="sap.m">
	<Page id="page" class="sapUiContentPadding" showNavButton="true" navButtonPress="onPressNavBack" title="Employee Group">
		<Table alternateRowColors="true" popinLayout="GridLarge" id="employee" headerText="{i18n>group}" class="sapUiResponsiveMargin" width="auto" items="{ path : 'employee>/EmployeeDetail'}">
			<headerToolbar>
				<Toolbar>
					<content>
						<!--GroupType-->
						<Label text="{i18n>group}" design="Bold"/>
						<!--SearchField-->
						<SearchField width="30%" search=".onFilterGroupType"/>
						<ToolbarSpacer/>
						<!--Add Button-->
						<Button type="Ghost" icon="sap-icon://add" tooltip="AddMoreGroupType" press="onPressAdd"/>
					</content>
				</Toolbar>
			</headerToolbar>
			<columns>
				<!--Group Name-->
				<Column demandPopin="true" hAlign="Left">
					<Label text="{i18n>columnGroupName}" design="Bold"/>
				</Column>
				<!--Employee Count-->
				<Column demandPopin="true" hAlign="Center">
					<Label text="{i18n>columnEmployeeCount}" design="Bold"/>
				</Column>
				<!--Group Type-->
				<Column demandPopin="true" hAlign="Left">
					<Label text="{i18n>columnGroupType}" design="Bold"/>
				</Column>
				<!--Group Code-->
				<Column demandPopin="true" hAlign="Left">
					<Label text="{i18n>columnGroupCode}" design="Bold"/>
				</Column>
				<!--Created Date-->
				<Column demandPopin="true" hAlign="Center">
					<Label text="{i18n>columnCreatedDate}" design="Bold"/>
				</Column>
				<!--Status-->
				<Column demandPopin="true" hAlign="Center">
					<Label text="{i18n>columnStatus}" design="Bold"/>
				</Column>
				<!--Show Employee Detail Button-->
				<Column demandPopin="true" width="1.4em" hAlign="Begin"></Column>
				<!--Edit Employee Group Button-->
				<Column demandPopin="true" width="6em" hAlign="End"></Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{employee>GroupName}"/>
						<ObjectIdentifier title="{employee>EmployeeCount}"/>
						<ObjectIdentifier title="{employee>GroupType}"/>
						<ObjectIdentifier title="{employee>GroupCode}"/>
						<ObjectIdentifier title="{employee>CreatedDate}"/>
						<ObjectIdentifier title="{employee>Status}"/>
						<Button type="Ghost" icon="sap-icon://show" tooltip="ShowEmployeeDetail"/>
						<Button type="Ghost" icon="sap-icon://edit" tooltip="EditEmployeeGroup" press="onPressUpdateEmplyeeGroup"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>