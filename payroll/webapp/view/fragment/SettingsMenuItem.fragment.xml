<!--Settings MenuItem fragment is used for Dashboard, SplitContainer, and UnifiedSplitContainer Views 
	for its Settings Menu pupose-->
<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">

	<!--Starting MenuItem-->
	<u:Menu
			itemSelect="handleMenuItemPress">
		<u:MenuItem
				text="EditProfile"
				icon="sap-icon://key-user-settings"/>
		<u:MenuItem
				text="ChangePassword" icon="sap-icon://locked"/>
		<u:MenuItem
				text="ChangeLanguage" icon="sap-icon://text-color">

			<u:Menu>
				<u:MenuItem  text="English" />
				<u:MenuItem  text="Arabic" />
				<u:MenuItem  text="Spanish" />
				<u:MenuItem  text="Chinese" />
			</u:Menu>

		</u:MenuItem>
	</u:Menu>
	<!--Ending MenuItem-->
</core:FragmentDefinition>