<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout" controllerName="com.app.payroll.controller.Login" xmlns:f="sap.ui.layout.form" displayBlock="true">
	<Page title="Payroll Login" showHeader="false" class="custom-page">
		<l:BlockLayout>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell width="2">
					<VBox>
						<Image src="./images/Inflexion.png"/>
					</VBox>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell width="1">
					<f:SimpleForm layout="ResponsiveGridLayout" class="sapUiLargeMarginTop custom-sform-style">
						<Label text="Username" design="Bold" class="common" required="true"/>
						<Input/>
						<Label text="Password" design="Bold" class="common" required="true"/>
						<Input/>
						<Button text="Login" tooltip="Login" type="Accept" press="onPressLogin"/>
						<Button type="Reject" tooltip="Forgot Password" text="Forget Password ?"/>
					</f:SimpleForm>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
		<Toolbar class="custom-footer-style">
			<ToolbarSpacer/>
			<Image src="./images/sap-gold-partner-logo.png" height="80%"/>
		</Toolbar>
	</Page>
</mvc:View>