<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout" controllerName="com.app.payroll.controller.Login" xmlns:f="sap.ui.layout.form">
	<App id="app">
		<pages>
			<Page title="Payroll Login" showHeader="false" class="custom-page">
				<l:BlockLayout>
					<l:BlockLayoutRow>
						<l:BlockLayoutCell width="2"></l:BlockLayoutCell>
						<l:BlockLayoutCell width="1">
							<f:SimpleForm layout="ResponsiveGridLayout" class="custom-border sapUiLargeMarginTop">
								<Label text="Username" design="Bold" class="common" required="true"/>
								<Input/>
								<Label text="Password" design="Bold" class="common" required="true"/>
								<Input/>
								<Button text="Login" type="Accept" press="onPressLogin"/>
								<Link class="common1 sapUiSmallMarginBegin" text="Forget Password ?" textAlign="Center"/>
							</f:SimpleForm>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
				</l:BlockLayout>
			</Page>
		</pages>
	</App>
</mvc:View>